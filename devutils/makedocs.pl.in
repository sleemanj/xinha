# are we running from a webserver?

if ( $ENV{ "HTTP_HOST" } != NULL )
   {
   print( "No\n" );
   exit( -1 );
   }

# a little error checking never hurt anyone. Make sure it's a Xinha directory

if ( ! -e ".xinha_root" )
   {
   print "makedocs.pl must be called from the Xinha root directory\n";
   exit -1;
   }

# we assume phpdoc in our path. 
# phpdoc can't handle .js files.

system( "phpdoc -o \"HTML:frames:earthli\" -ric ddt.js -d ./ -t ./docs/php_backend_reference -ti 'Xinha PHP Backend Programmers Reference'" );

# we assume JSDoc in our path
# see http://jsdoc.sourceforge.net
#
# /usr/local/src/JSDoc-1.9.3.1

system( "jsdoc.pl -d ./docs/js_reference --private --package-naming --project-name=Xinha --recursive *" );

